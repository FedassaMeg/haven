<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="
            http://www.ehcache.org/v3
            http://www.ehcache.org/schema/ehcache-core-3.10.xsd">

    <!-- Cache Template Definitions -->
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache-template>

    <cache-template name="short-lived">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
        </resources>
    </cache-template>

    <cache-template name="long-lived">
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">20</offheap>
        </resources>
    </cache-template>

    <!-- Clients Cache -->
    <cache alias="clients" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>org.haven.clientprofile.domain.Client</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">5</offheap>
        </resources>
        <heap-store-settings>
            <max-object-graph-size>5000</max-object-graph-size>
            <max-object-size unit="KB">5</max-object-size>
        </heap-store-settings>
    </cache>

    <!-- Cases Cache -->
    <cache alias="cases" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <!-- Users Cache -->
    <cache alias="users" uses-template="long-lived">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="hours">12</ttl>
        </expiry>
        <resources>
            <heap unit="entries">200</heap>
            <offheap unit="MB">2</offheap>
        </resources>
    </cache>

    <!-- Permissions Cache -->
    <cache alias="permissions" uses-template="long-lived">
        <key-type>java.lang.String</key-type>
        <value-type>java.util.Set</value-type>
        <expiry>
            <ttl unit="hours">6</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
        </resources>
    </cache>

    <!-- Session Cache (for distributed sessions if needed) -->
    <cache alias="sessions" uses-template="short-lived">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <!-- Query Results Cache -->
    <cache alias="queryResults">
        <key-type>java.lang.String</key-type>
        <value-type>java.util.List</value-type>
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">200</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <!-- Authentication Token Cache -->
    <cache alias="authTokens">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
        </resources>
    </cache>

    <!-- Organization Cache -->
    <cache alias="organizations">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>

    <!-- Programs Cache -->
    <cache alias="programs">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="hours">12</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
        </resources>
    </cache>

    <!-- Event Listener Configuration -->
    <event>
        <listeners>
            <listener>
                <class>org.slf4j.LoggerFactory</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
            </listener>
        </listeners>
    </event>

</config>