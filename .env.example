# Haven DV Case Management Platform - Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=haven
APP_ENV=development
APP_PORT=8080
APP_BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=haven
DB_USERNAME=haven
DB_PASSWORD=haven
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8081
KEYCLOAK_REALM=haven
KEYCLOAK_CLIENT_ID=haven-backend
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-change-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With

# ============================================================================
# MESSAGING & EVENTS (Optional for MVP)
# ============================================================================
KAFKA_ENABLED=false
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=haven-group
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_LEVEL_APPLICATION=INFO
LOG_LEVEL_HIBERNATE=WARN
LOG_LEVEL_SPRING=INFO
LOG_FILE_PATH=./logs
LOG_FILE_NAME=haven.log
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_HISTORY=30

# Actuator/Metrics
MANAGEMENT_ENDPOINTS_ENABLED=true
MANAGEMENT_ENDPOINT_HEALTH_ENABLED=true
MANAGEMENT_ENDPOINT_METRICS_ENABLED=true
MANAGEMENT_ENDPOINT_INFO_ENABLED=true

# ============================================================================
# AWS/CLOUD CONFIGURATION (For Production)
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=haven-documents
AWS_S3_REGION=us-east-1

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@haven.org
MAIL_USE_TLS=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_AUDIT_LOG=true
FEATURE_DOCUMENT_UPLOAD=false
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_ADVANCED_REPORTING=false

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_TIMEOUT=1800
SESSION_REMEMBER_ME_DURATION=604800
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# ============================================================================
# FILE STORAGE
# ============================================================================
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=./uploads
FILE_MAX_SIZE=10485760
FILE_ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8081
NEXT_PUBLIC_KEYCLOAK_REALM=haven
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=haven-frontend
NEXT_PUBLIC_APP_NAME=Haven Case Management
NEXT_PUBLIC_SUPPORT_EMAIL=support@haven.org

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs
H2_CONSOLE_ENABLED=false
DEBUG_MODE=false